todos = {}

while True:
    print("Current To-Do's:\n")
    for task, status in todos.items():
        print(f"{task} - {status}")

    # Ask for user input
    print("\n1. Add an item")
    print("2. Complete an item")
    print("3. View To-Do's")
    print("4. Exit program")
    ans = input("What would you like to do? (Please enter corresponding number)\n")

    if ans.lower() == "1":
        i = input("What item needs to get done?\n")
        todos[i] = "Pending"
    elif ans.lower() == '2':
        print("What would you like to change?")
        for i, val in enumerate(todos.keys(), 1):
            print(f"{i}. {val}")

        try:
            j = int(input("Enter the number: ")) - 1
            task = list(todos.keys())[j]
            todos[task] = "Completed"
        except (ValueError, IndexError):
            print(f"Invalid selection.")
    elif ans.lower() == "3":
        for task, status in todos.items():
            print(f"{task} - {status}")
    elif ans.lower() == '4':
        break
    else:
        print("Invalid choice: please select another option.")